---
import '../styles/global.css';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import { people } from '../data/people.js';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>About Us â€” Caraco</title>
  </head>
  <body>
    <Nav />
    <main class="container">
      <h1>About Us</h1>
      <p class="tagline">Who we are and what we value.</p>
      <div class="card">
        <h3>Our mission</h3>
        <p>To craft digital products that make people's lives better.</p>
      </div>
      
      <section class="people-section">
        <h2>Our People</h2>
        <p class="tagline">Meet the team that makes it happen.</p>
        <div class="people-grid">
          {people.map(p => (
            <article class="person-card" key={p.name}>
              <div class="person-photo">
                <img src={p.photo} alt={p.name} />
              </div>
              <div class="person-body">
                <h3>{p.name}</h3>
                <div class="person-role">{p.role}</div>
                <ul class="person-notes">
                  {p.notes.map(n => (<li key={n}>{n}</li>))}
                </ul>
              </div>
            </article>
          ))}
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
