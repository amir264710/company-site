---
import Base from '../layouts/Base.astro';
import { projects } from '../data/projects.js';
---

<Base title="Projects â€” Caraco">
  <main class="container">
    <header style="margin-bottom:1rem">
      <h1 style="margin:0">Projects</h1>
      <p class="tagline">Selected work and case studies.</p>
    </header>

    <section class="projects-card card">
      <h3 style="margin-top:0">Selected projects</h3>
      <div class="projects-grid">
        {projects.map(project => (
          <article class="project-card" key={project.slug}>
            <a class="project-thumb" href={`/projects/${project.slug}`} aria-label={`Open ${project.title}`}>
              <img loading="lazy" src={project.heroImage} alt={project.title} />
            </a>
            <div class="project-card-body">
              <h4 class="project-card-title"><a href={`/projects/${project.slug}`}>{project.title}</a></h4>
              <p class="project-card-excerpt">{project.description}</p>
              <div class="project-card-meta">
                <a class="cta" href={`/projects/${project.slug}`}>View case study</a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>
  </main>
</Base>
